<% layout('layouts/boilerplate.ejs') %>
<body class="container mt-5">

    <h2 class="text-primary mb-4">Add New Listing</h2>

    <form method="post" action="/listings" class="border needs-validation p-4 rounded shadow-sm bg-light" novalidate>
        
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input name="listing[title]" class="form-control" placeholder="Enter title" type="text" required pattern="^[A-Za-z\s]+$">
            <div class="invalid-feedback">Title is required.</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" placeholder="Enter description" rows="3" required pattern="^[A-Za-z\s]+$"></textarea>
            <div class="invalid-feedback">Description is required.</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Image URL</label>
            <input name="listing[image]" class="form-control" placeholder="Image Link/URL" type="url">
            <div class="invalid-feedback">Please enter a valid URL.</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input name="listing[price]" class="form-control" placeholder="Enter price"  min="0" required>
            <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Location</label>
            <input name="listing[location]" class="form-control" placeholder="Enter location" type="text" required pattern="^[A-Za-z\s]+$">
            <div class="invalid-feedback">Location is required.</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Country</label>
            <input name="listing[country]" class="form-control" placeholder="Enter country" type="text" required pattern="^[A-Za-z\s]+$">
            <div class="invalid-feedback">Country is required.</div>
        </div>

        <button type="submit" class="btn btn-success w-100">Add Listing</button>

    </form>

   

</body>